<html>
    <head>
        <meta charset="utf8">
        <title>Blog_App</title>
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <div id="errors">
            <% if @blog.errors.present? %>
                <ul>
                    <% @blog.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
        
        <h1>記事作成</h1>
        <form action="/create" method="post">
            <div>
                <label for="blog_title">タイトル</label>
                <input type="text" name="title" id="blog_title">
            </div>

            <div>
                <label for="blog_content">ブログ内容</label>
                <textarea name="content" id="blog_content"　rows="4" cols="40"></textarea>
            </div>

            <% if @categories.present? %>
                <div>
                    <select name="category">
                        <% @categories.each do |category| %>
                            <option value="<%= category.id %>"><%= category.name%></option>
                        <% end %>
                    </select>
                </div>
            <% end %>

            <input type="submit">
        </form>

        <a href="/">一覧に戻る</a>
    </body>
</html>